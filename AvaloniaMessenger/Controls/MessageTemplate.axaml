<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:controls="using:AvaloniaMessenger.Controls">
  <Design.PreviewWith>
    <controls:MessageTemplate />
  </Design.PreviewWith>

  <Style Selector="controls|MessageTemplate">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        
        <Grid
          Background="WhiteSmoke"
          VerticalAlignment="Stretch">
          <Border
            Background="White"
            CornerRadius="20"
            Padding="5">
            <StackPanel>
              <TextBlock
                         Padding="0"
                         Text="{TemplateBinding Sender}"
                         TextWrapping="Wrap"
                         FontWeight="DemiBold"
                         Foreground="BlueViolet"/>
              <TextBlock
                Padding="0"
                Text="{TemplateBinding TextMessage}"
                         TextWrapping="Wrap"/>
              <TextBlock
                Padding="0"
                Text="{TemplateBinding Time}"
                         HorizontalAlignment="Left"
                         Foreground="Gray"/>
            </StackPanel>
          </Border>
        </Grid>
        
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
